root = true

[*]
indent_style = tab
indent_size = 4
charset = latin1
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 79

[tests/files/*.py]
charset = utf-8
indent_style = space
indent_size = 4
max_line_length = 79

# MD files
[*.md]
charset = utf-8
